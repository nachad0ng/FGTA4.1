<div id="pnl_editKomponengrid">
	<div class="fgta-page-title">Daftar Komponengrid</div>
	<div id="pnl_editKomponengrid-title" style="margin-top: 0px; margin-bottom: 30px; font-weight: bold; font-size: 1.2em">XXXXXXX</div>


	<div style="margin-top: 10px; margin-bottom: 15px">
		<table id="pnl_editKomponengrid-tbl_list" paging="true" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th type="check">chk</th>
					<th mapping="empkomp_id">empkomp_id</th>
					<th mapping="komp_name">komp_name</th>
					<th mapping="empkomp_descr">empkomp_descr</th>
          <th mapping="empkomp_amount" 
              data-options="field:'empkomp_amount',width:50, 
                formatter:function(value, row){                                  
                return parseInt(num).format(2, 3, '.', ',');}">empkomp_amount
          </th>
